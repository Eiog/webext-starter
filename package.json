{
  "name": "web-extension",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "description": "",
  "author": "Eiog",
  "license": "MIT",
  "homepage": "https://github.com/Eiog/webext-starter",
  "scripts": {
    "dev": "vite dev",
    "dev:firefox": "TARGET=firefox vite dev",
    "build": "vue-tsc --noEmit && vite build && pnpm zip",
    "build:firefox": "vue-tsc --noEmit && TARGET=firefox vite build && pnpm zip",
    "zip":"node scripts/zip.mjs",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "update:deps": "taze -w && pnpm i",
    "type:check": "vue-tsc --noEmit",
    "preview": "vite preview",
    "cz": "czg",
    "commit": "git pull && git add -A && pnpm cz && git push",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "npx simple-git-hooks"
  },
  "dependencies": {
    "@unocss/reset": "^0.58.3",
    "@vueuse/core": "^10.7.1",
    "@vueuse/head": "^2.0.0",
    "colord": "^2.9.3",
    "notivue": "^2.1.1",
    "pinia": "^2.1.7",
    "pinia-plugin-persistedstate": "^3.2.1",
    "vue-i18n": "^9.8.0",
    "vuetify": "^3.4.9"
  },
  "devDependencies": {
    "@eiog/eslint-config": "^0.0.2",
    "@eiog/ts-config": "^0.0.3",
    "@iconify-json/ri": "^1.1.18",
    "@intlify/unplugin-vue-i18n": "^2.0.0",
    "@types/lodash.debounce": "^4.0.9",
    "@types/webextension-polyfill": "^0.10.7",
    "@vitejs/plugin-vue": "^5.0.2",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vitest/ui": "^1.1.2",
    "@vue/compiler-sfc": "^3.4.5",
    "@vue/test-utils": "^2.4.3",
    "commitlint": "^18.4.4",
    "cz-git": "^1.8.0",
    "czg": "^1.8.0",
    "eslint": "^8.56.0",
    "jsdom": "^23.0.1",
    "less": "^4.2.0",
    "lint-staged": "^15.2.0",
    "naive-ui": "^2.36.0",
    "postcss-preset-env": "^9.3.0",
    "sass": "^1.69.7",
    "simple-git-hooks": "^2.9.0",
    "taze": "^0.13.1",
    "typescript": "^5.3.3",
    "unocss": "^0.58.3",
    "unocss-preset-extra": "^0.5.3",
    "unocss-preset-scrollbar": "^0.3.0",
    "unplugin-auto-import": "^0.17.3",
    "unplugin-icons": "^0.18.1",
    "unplugin-vue-components": "^0.26.0",
    "vfonts": "^0.0.3",
    "vite": "^5.0.10",
    "vite-plugin-svg-icons": "^2.0.1",
    "vite-plugin-vue-devtools": "^7.0.5",
    "vite-plugin-web-extension": "^4.1.1",
    "vite-plugin-webfont-dl": "^3.9.1",
    "vitest": "^1.1.2",
    "vue": "^3.4.5",
    "vue-tsc": "^1.8.27",
    "web-ext": "^7.9.0",
    "webext-bridge": "^6.0.1",
    "webextension-polyfill": "^0.10.0",
    "zip-a-folder": "^3.1.5"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged && pnpm type:check"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm lint:fix"
    ]
  }
}
